<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="WidgetProgessBar" parent="@android:style/Widget.ProgressBar.Horizontal">
		<item name="android:progressDrawable">@drawable/blueprogress</item>
		<item name="android:layout_height">6dp</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:max">100</item>
		<item name="android:progress">50</item>
		<item name="android:layout_alignParentBottom">true</item>
	</style>
	<style name="WidgetDivider">
		<item name="android:layout_width">1dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">@drawable/divider</item>
        <item name="android:contentDescription">@null</item>
	</style>
	<style name="WidgetSlotLayout">
		<item name="android:layout_marginRight">1px</item>
		<item name="android:layout_marginLeft">1px</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_weight">0.5</item>
        <item name="android:orientation">vertical</item>
	</style>
	<style name="WidgetInnerSlotLayout">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
	</style>
	<style name="WidgetSaldoTextView" parent="@android:style/Widget.TextView">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:textSize">18dp</item>
		<item name="android:gravity">center</item>
		<item name="android:text">150</item>
	</style>
	<style name="WidgetSaldoTypeTextView" parent="@style/WidgetSaldoTextView">
		<item name="android:textSize">11dp</item>
	</style>
	<style name="MainSlotLayout">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:background">@drawable/background_flat</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:orientation">vertical</item>
	</style>
	<style name="MainTypeTextView" parent="@android:style/Widget.TextView">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">16dp</item>
		<item name="android:gravity">center</item>
	</style>
	<style name="MainDivider">
		<item name="android:src">@android:drawable/divider_horizontal_dim_dark</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:scaleType">fitXY</item>
		<item name="android:paddingLeft">5dp</item>
		<item name="android:paddingRight">5dp</item>
		<item name="android:paddingBottom">1dp</item>
		<item name="android:paddingTop">1dp</item>
	</style>
	<style name="MainSaldoTextView" parent="@android:style/Widget.TextView">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">15dp</item>
		<item name="android:layout_margin">4dp</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:text">500 av 500 sms</item>
	</style>
    <style name="MainProgessBar" parent="@android:style/Widget.ProgressBar.Horizontal">
		<item name="android:progressDrawable">@drawable/blueprogress</item>
		<item name="android:layout_height">12dp</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:max">100</item>
		<item name="android:progress">50</item>
		<item name="android:layout_marginBottom">12dp</item>
		<item name="android:layout_marginLeft">25dp</item>
		<item name="android:layout_marginRight">25dp</item>
	</style>
</resources>
